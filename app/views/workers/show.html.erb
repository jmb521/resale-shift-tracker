
<h1><%= @worker.first_name %> <%= @worker.last_name %></h1>
<br />

<h3>Member number: <%= @worker.member_number %></h3>
<br />
<table>
   <tr>
       <th>Resale Date:</th>
       <th>Start Time</th>
       <th>End Time</th>
       <th>Shift Description</th>
       <th>Have you checked in?</th>
       <th></th>

   </tr>
    <% @worker.shift_workers.each do |s| %>
    <tr>
        <td><%= s.shift.resale_date.strftime("%A, %B, %e") %></td>
        
        
        <td><%= s.shift.start_time.strftime("%I:%M %P") %></td>
        
        <td><%= s.shift.end_time.strftime("%I:%M %P") %></td>
        
        <td><%= s.shift.description %></td>
        
        <td><%= s.checked_in %></td>
        <td><form action="/check_in/<%= s.id %>" method="post">
            <input type="hidden" name="_method" value="patch" />
            <input type="submit" name="submit" value="Check In" />
        </form>></td>
    </tr>
    
    <% end %>
</table>